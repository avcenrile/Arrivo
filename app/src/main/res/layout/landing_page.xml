<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LandingPage">

    <Button
        android:id="@+id/logInLandingBtn"
        android:layout_width="196dp"
        android:layout_height="52dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="#F12D2F"
        android:text="Log In"
        app:layout_constraintEnd_toEndOf="@+id/welcome"
        app:layout_constraintStart_toStartOf="@+id/welcome"
        app:layout_constraintTop_toBottomOf="@+id/welcome" />

    <ImageView
        android:id="@+id/landingImage"
        android:layout_width="422dp"
        android:layout_height="423dp"
        android:src="@drawable/homepagepic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.545"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/signUpLandingBtn"
        android:layout_width="196dp"
        android:layout_height="52dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#F12D2F"
        android:text="Sign Up"
        app:layout_constraintEnd_toEndOf="@+id/logInLandingBtn"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/logInLandingBtn"
        app:layout_constraintTop_toBottomOf="@+id/logInLandingBtn" />

    <ImageView
        android:id="@+id/welcome"
        android:layout_width="160dp"
        android:layout_height="90dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/welcome_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="@+id/landingImage"
        app:layout_constraintTop_toBottomOf="@+id/landingImage" />
</androidx.constraintlayout.widget.ConstraintLayout>